<project name="spoofax-aterm" default="jar">
	
    <import file="build/common.ant.xml" />

    <target name="compile" depends="resolve" description="--> compile the project">
        <mkdir dir="${build.dir}/classes" />
        <javac srcdir="${src.dir}" destdir="${build.dir}/classes" classpathref="lib.path.id">
            <exclude name="aterm/test/**" />
        </javac>
    </target>

   <target name="install" depends="jar" description="--> install the project into prefix">
        <mkdir dir="${prefix}/share/java" />
        <copy todir="${prefix}/share/java">
            <fileset dir="${lib.dir}/" />
        </copy>

        <copy file="build/${jarname}-${version}.jar" todir="${prefix}/share/java" />
   </target>

   <target name="dist" description="--> create the dist tarball">
       <tar destfile="spoofax-aterm-${version}.tar">
           <tarfileset prefix="spoofax-aterm-${version}/" dir="." includes="src/"/>
           <!-- THIS IS 3VIL! Should be removed once the deps are properly packaged -->
           <tarfileset prefix="spoofax-aterm-${version}/" dir="." includes="lib/"/>
           <tarfileset prefix="spoofax-aterm-${version}/" dir=".">
             <include name="*.xml" />
             <include name="build/*.xml" />
             <include name="build/*.properties" />
             <include name="*.properties" />
           </tarfileset>
           <tarfileset prefix="spoofax-aterm-${version}/" dir="." includes="README AUTHORS COPYING NEWS README.spoofax INSTALL StreamableATermFormat.txt Makefile ChangeLog"/>
           <tarfileset prefix="spoofax-aterm-${version}/" dir="." includes="META-INF/" />
       </tar>
       <gzip zipfile="spoofax-aterm-${version}.tar.gz" src="spoofax-aterm-${version}.tar"/>
   </target>

   <target name="check" depends="jar">
   </target>

</project>
